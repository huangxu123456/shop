<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.apesource.shop.dao.SellerDao">

    <select id="seleteSeller" resultType="com.apesource.shop.pojo.Seller">
        select * from seller
        <where>
            <if test="sellerId != '' and sellerId !=null">
                seller_id=#{sellerId}
            </if>
            <if test="name !='' and name!=null">
               and name=#{name}
            </if>
        </where>
    </select>
</mapper> 
